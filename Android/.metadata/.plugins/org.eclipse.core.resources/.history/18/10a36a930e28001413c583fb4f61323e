package com.example.feirafacil.system;

public class Supermarket {
	
	private Long id;
	private String name;
	private Address address;
	private Double totalPrice;
	
	/**
	 * Constructor 
	 * @param id:
	 * 			Long: Id of the supermarket
	 * @param name:
	 * 			String: Name of the supermarket
	 * @param address
	 * 			Address: Address of the supermarket
	 * @param price
	 * 			Double: Price of total products in supermarket
	 */
	public Supermarket(Long id, String name, Address address, double price) {
		this.id = id;
		this.name = name;
		this.address = address;
		this.totalPrice = price;
	}

	/**
	 * Get price
	 * @return Double with total price of products in supermarket
	 */
	public Double getPrice() {
		return totalPrice;
	}

	/**
	 * Set price
	 * @param price:
	 * 			Double with price for all select products in the supermarket
	 */
	public void setPrice(Double price) {
		this.totalPrice = price;
	}

	/**
	 * Get Id
	 * @return Long with id
	 */
	public Long getId() {
		return id;
	}

	/**
	 * Get name
	 * @return String with name
	 */
	public String getName() {
		return name;
	}

	/**
	 * Get address
	 * @return Address of the supermarket
	 */
	public Address getAddress() {
		return address;
	}
	
}
